rules_version = '2';
service cloud.firestore {
   match /databases/{products}/{documentID} {
    match /{document=**} {
      allow read;
      allow write: if isSignedIn();
      allow delete: if isSignedIn();
      }
   }
   match /databases/{users}/{documentID} {
    match /{document=**} {
      allow read:if isSignedIn();
      allow write;
      allow delete: if isSignedIn();
      }x
   }
 }

 // Functions
  function isSignedIn(){
    return request.auth != null;
}
